// 将设置放入此文件中以覆盖默认值和用户设置。
{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    // 配置 glob 模式以排除文件和文件夹。
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/iOS": true
    },
    // 一个制表符等于的空格数。该设置在 `editor.detectIndentation` 启用时根据文件内容进行重写。
    "editor.tabSize": 2,
    "vsicons.presets.angular": true
}